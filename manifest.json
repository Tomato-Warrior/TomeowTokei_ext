{
  "manifest_version": 2,
  "name": "TomeowTokei",
  "version": "1.0.0",
  "description": "This is a useful Pomodoro Techinique tool",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "TomeowTokei"
  },
  "options_page": "option.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "alarms",
    "http://localhost:3000/"
  ]
}